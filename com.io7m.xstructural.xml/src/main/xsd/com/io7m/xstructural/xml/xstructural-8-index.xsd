<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            elementFormDefault="qualified"
            xmlns:s="urn:com.io7m.structural.index:1:0"
            targetNamespace="urn:com.io7m.structural.index:1:0">

  <xsd:simpleType name="uuidType">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">
        A UUID value.
      </xsd:documentation>
    </xsd:annotation>
    <xsd:restriction base="xsd:string">
      <xsd:pattern value="[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}"/>
    </xsd:restriction>
  </xsd:simpleType>

  <xsd:element name="Index">
    <xsd:complexType>
      <xsd:sequence minOccurs="0"
                    maxOccurs="unbounded">
        <xsd:element ref="s:Item"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="Item">
    <xsd:complexType>
      <xsd:attribute name="File"
                     type="xsd:anyURI"
                     use="required"/>
      <xsd:attribute name="ID"
                     type="s:uuidType"
                     use="required"/>
      <xsd:attribute name="Type"
                     type="xsd:string"
                     use="required"/>
      <xsd:attribute name="Title"
                     type="xsd:string"
                     use="optional"/>
    </xsd:complexType>
  </xsd:element>

</xsd:schema>